.tweets
	width 700px
	overflow hidden
	clear both
	background linear-gradient(0deg, rgba(34,193,195,1) 0%, rgba(253,187,45,1) 100%)
	.tweet-n
		background-image url('olimpic.png')
		background-size 100%
		background-repeat no-repeat
		width 700px
		height 350px
		margin 10px auto
		border 1px solid #f3f3f3

.header
	position fixed
	width 100%
	height 40px
	background: rgb(34,193,195)
	background: radial-gradient(circle, rgba(34,193,195,1) 0%, rgba(180,127,13,1) 100%)

.footer
	position fixed
	bottom 0
	width 100%
	height 60px
	background: rgb(131,58,180)
	background: linear-gradient(90deg, rgba(131,58,180,1) 0%, rgba(253,29,29,1) 50%, rgba(252,176,69,1) 100%) 